{
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/.server/**/*.ts",
    "**/.server/**/*.tsx",
    "**/.client/**/*.ts",
    "**/.client/**/*.tsx",
    ".react-router/types/**/*"
  ],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "jsx": "react-jsx",
    "target": "ESNext",
    "noEmit": true, // Vite takes care of building everything, not tsc.
    "skipLibCheck": true,

    /* modules */
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "module": "ESNext",
    "isolatedModules": true,
    "esModuleInterop": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,

    /* type checking */
    "strict": true,
    "verbatimModuleSyntax": false, // if true, 'class-variance-authority' does not provide an export named 'VariantProps'
    "rootDirs": [".", "./.react-router/types"]
  }
}
